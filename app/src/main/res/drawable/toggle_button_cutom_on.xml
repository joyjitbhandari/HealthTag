<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <size android:width="54dp" android:height="28dp" />
            <solid android:color="@color/white" />
            <stroke android:color="@color/border_gray" android:width="1dp"/>
        </shape>
    </item>
    <item  android:right="4dp"  android:height="22dp" android:width="22dp" android:gravity="right|center_vertical" >
        <shape android:shape="oval">
            <solid android:color="#BF053C"/>
            <size android:width="26dp"
                android:height="26dp" />
        </shape>
    </item>
    <item android:right="5dp"  android:height="22dp" android:width="20dp"  android:gravity="right|center_vertical" >
        <shape android:shape="oval">
            <solid android:color="#FF024C" />
            <size android:width="26dp" android:height="26dp" />
        </shape>
    </item>

</layer-list>
