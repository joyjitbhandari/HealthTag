<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            tools:context=".view.SplashActivity">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:src="@drawable/gray_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_refer"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:scaleType="matrix"
                android:src="@drawable/ic_refer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_refer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect_bg_f9f9f9_15dp"
                android:padding="20dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_refer">


                <TextView
                    android:id="@+id/tv_refer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/outfit_medium"
                    android:gravity="center"
                    android:text="@string/refer_a_friend"
                    android:textColor="@color/_444343"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="center"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                    android:textColor="@color/_444343"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_refer" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/rounded_rect_bg_white_gray_border_40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_desc">


                    <TextView
                        android:id="@+id/et_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginStart="28dp"
                        android:background="@color/white"
                        android:fontFamily="@font/outfit_regular"
                        android:gravity="center"
                        android:text="HEALTAIFASJK231321"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/btn_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_rect_bg_red"
                        android:fontFamily="@font/outfit_regular"
                        android:gravity="center"
                        android:padding="14dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:text="@string/copy"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="center"
                    android:text="Or"
                    android:textColor="@color/_444343"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_code" />

                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="4dp"
                    android:src="@drawable/twitter_red"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_facebook"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_or" />

                <ImageView
                    android:id="@+id/iv_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:elevation="4dp"
                    android:src="@drawable/facebook_red"
                    app:layout_constraintEnd_toStartOf="@id/iv_insta"
                    app:layout_constraintStart_toEndOf="@id/iv_twitter"
                    app:layout_constraintTop_toTopOf="@id/iv_twitter" />

                <ImageView
                    android:id="@+id/iv_insta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/instagram_red"
                    app:layout_constraintEnd_toStartOf="@id/iv_pinterest"
                    app:layout_constraintStart_toEndOf="@id/iv_facebook"
                    app:layout_constraintTop_toTopOf="@id/iv_twitter" />

                <ImageView
                    android:id="@+id/iv_pinterest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:elevation="4dp"
                    android:src="@drawable/pinterest_red"
                    app:layout_constraintEnd_toStartOf="@id/iv_share"
                    app:layout_constraintStart_toEndOf="@id/iv_insta"
                    app:layout_constraintTop_toTopOf="@id/iv_twitter" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:elevation="4dp"
                    android:src="@drawable/share_red"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_pinterest"
                    app:layout_constraintTop_toTopOf="@id/iv_twitter" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_how_works"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/outfit_semibold"
                android:gravity="center"
                android:text="@string/how_it_works"
                android:textColor="@color/_444343"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_refer" />

            <TextView
                android:id="@+id/tv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_white_e8e8e8_border"
                android:fontFamily="@font/outfit_semibold"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_13"
                android:padding="6dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                android:text="1"
                android:textColor="@color/_444343"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_how_works"
                app:layout_constraintTop_toBottomOf="@id/tv_how_works" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/outfit_regular"
                android:text="Lorem Ipsum is simply dummy text"
                android:textColor="@color/_444343"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_first"
                app:layout_constraintStart_toEndOf="@id/tv_first"
                app:layout_constraintTop_toTopOf="@id/tv_first" />

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle_white_e8e8e8_border"
                android:fontFamily="@font/outfit_semibold"
                android:gravity="center"
                android:padding="6dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                android:text="2"
                android:textColor="@color/_444343"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_first"
                app:layout_constraintTop_toBottomOf="@id/tv_first" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/outfit_regular"
                android:text="Lorem Ipsum is simply dummy text"
                android:textColor="@color/_444343"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_second"
                app:layout_constraintStart_toEndOf="@id/tv_second"
                app:layout_constraintTop_toTopOf="@id/tv_second" />

            <TextView
                android:id="@+id/tv_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle_white_e8e8e8_border"
                android:fontFamily="@font/outfit_semibold"
                android:gravity="center"
                android:padding="6dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                android:text="3"
                android:textColor="@color/_444343"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_second"
                app:layout_constraintTop_toBottomOf="@id/tv_second" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/outfit_regular"
                android:text="Lorem Ipsum is simply dummy text"
                android:textColor="@color/_444343"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_third"
                app:layout_constraintStart_toEndOf="@id/tv_third"
                app:layout_constraintTop_toTopOf="@id/tv_third" />

            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/outfit_semibold"
                android:gravity="center"
                android:text="@string/reward_points"
                android:textColor="@color/_444343"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_third" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_empty_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reward">

                <ImageView
                    android:id="@+id/iv_reward_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.1"
                    android:src="@drawable/reward_empty"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_no_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="center"
                    android:text="@string/no_rewards_found"
                    android:textColor="@color/_444343"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_reward_empty" />

                <TextView
                    android:id="@+id/tv_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:fontFamily="@font/outfit_regular"
                    android:gravity="center"
                    android:text="@string/invite_friend"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_no_reward" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_reward"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reward" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>