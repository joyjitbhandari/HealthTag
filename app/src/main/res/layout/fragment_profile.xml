<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/_FAFAFB"
            tools:context=".view.SplashActivity">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardElevation="12dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                style="@style/RoundCardViewStyle"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_white_shadow"
                android:src="@drawable/ic_back_white_bg"
                android:elevation="12dp"/>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:cardElevation="12dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                style="@style/RoundCardViewStyle"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintBottom_toBottomOf="@id/cv_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cv_back" >

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_white_shadow"
                android:scaleType="centerInside"
                android:elevation="12dp"
                android:src="@drawable/ic_edit"/>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_profileImg"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="20dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardCornerRadius="65dp"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="false"
                android:layout_marginTop="-25dp"
                android:background="@drawable/circle_blue_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_back"
                >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@mipmap/profile" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:maxLines="2"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/outfit_semibold"
                android:textSize="32sp"
                android:text="John Doe"
                android:textColor="@color/red"
                app:layout_constraintTop_toBottomOf="@id/cv_profileImg"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/outfit_regular"
                android:textSize="14sp"
                android:text="johndoe@gmail.com"
                android:textColor="@color/_444343"
                app:layout_constraintTop_toBottomOf="@id/tv_name"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_email"
                app:cardCornerRadius="18dp"
                android:elevation="2dp"
                app:cardElevation="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardPreventCornerOverlap="false"
                android:layout_marginTop="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <LinearLayout
                        android:id="@+id/ll_my_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_my_device"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/my_devices"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_my_device">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_my_order"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/my_order"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_provider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_my_order">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_provider"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/provider"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_provider">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_family"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/family"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_payments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_family">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_payments"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/payments"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_refer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_payments">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_refer_friend"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/refer_friend"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_refer">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_notification_profile"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/notifications"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_subscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_notification">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_notification_profile"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/subscription"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_support"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="32dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_subscription">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_support_black"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/support"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_logOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_support">
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:padding="16dp"
                            android:background="@drawable/rounded_rect_bg_f7f6f9_15dp"
                            android:src="@drawable/ic_logout"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/outfit_regular"
                            android:text="@string/log_out"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/_444343"
                            android:textSize="20sp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow_profile"/>
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:text="@string/feedback"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_about_us"
                app:layout_constraintTop_toBottomOf="@id/cv_menu"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="28dp"
                android:textColor="@color/red"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:text="@string/about_us"
                app:layout_constraintStart_toEndOf="@id/tv_feedback"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_feedback"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="80dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red"
                android:textSize="15sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>