<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_startTest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:text="Start PEF/FEV1" />

        <Button
            android:id="@+id/button_stopTest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Stop" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/imgTargetBackground"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:layout_gravity="left|bottom"
            android:src="#c6fcc3" />

        <ImageView
            android:id="@+id/imgTarget"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_gravity="left|bottom"
            android:src="#70ea29" />

        <TextView
            android:id="@+id/lblTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="18dp"
            android:text="T\nA\nR\nG\nE\nT"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTarget"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:text="1%"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgActualBackground"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:layout_gravity="right|bottom"
            android:src="#fdd69b" />

        <ImageView
            android:id="@+id/imgActual"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_gravity="right|bottom"
            android:src="#fda015" />

        <TextView
            android:id="@+id/lblActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="14dp"
            android:text="A\nC\nT\nU\nA\nL"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_actual"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="1%"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_startBlowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="START BLOWING"
            android:textAlignment="center"
            android:textColor="#ff4050"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="5dp"
        android:layout_weight="1.0">

        <TextView
            android:id="@+id/text_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp" />

    </ScrollView>

    <TextView
        android:id="@+id/text_qualityReport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textAlignment="center"
        android:textSize="14sp" />


    <Spinner
        android:id="@+id/header_spinner_turbine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:visibility="invisible"/>

</LinearLayout>
</layout>